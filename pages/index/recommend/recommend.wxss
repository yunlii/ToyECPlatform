/* pages/index/recommend/recommend.wxss */
.sub-page {
	margin: 0;
	padding: 0;
}


.banner {
	margin: 0 auto;
}
.banner swiper swiper-item .swiper-item {
	width: 710rpx;
  height: 310rpx;
}
.banner swiper swiper-item .swiper-item image {
	width: 710rpx;
  height: 310rpx;
}


.navigation-icon {
	width: 686rpx;
	height: 180rpx;
	background-color: white;
	border-radius: 4px;
	margin: 30rpx auto 0 auto;
	position: relative;
	display: flex;
	justify-content: space-around;
	align-items: center;
}
.navigation-icon > view {
	display: flex;
	flex-direction: column;
	align-items: center;
}
.navigation-icon image {
	width: 80rpx;
	height: 80rpx;
}
.navigation-icon text {
	font-size: 12px;
	color: #333333;
	margin: 16rpx 0 0 0;
}
.navigation-icon .decorative-image {
	width: 44rpx;
	height: 80rpx;
	position: absolute;
	top: -22rpx;
	right: 24rpx;
}


.recommend-card {
	width: 686rpx;
	height: 348rpx;
	margin: 26rpx auto 0 auto;
	background-color: white;
	border-radius: 4px;
	display: flex;
	flex-direction: column;
	align-items: center;
	z-index: -3;
	position: relative;
}
.recommend-card .recommend-card-title {
	margin: 32rpx;
	align-self: flex-start;
	font-size: 16px;
	font-weight: 700;
}
.recommend-card .recommend-card-list {
	width: 622rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	position: relative;
}
.recommend-card .product-info {
	width: 622rpx;
	height: 200rpx;
	border-radius: 4px;
	border: 1px solid #e5e5e5;
	background-color: white;
	padding: 24rpx;
	box-sizing: border-box;
	display: flex;
	justify-content: space-around;
	align-items: center;
}
.recommend-card .card-two {
	width: 594rpx;
	height: 200rpx;
	position: absolute;
	top: 8rpx;
	z-index: -1;
}
.recommend-card .card-three {
	width: 560rpx;
	height: 188rpxs;
	position: absolute;
	top: 16rpx;
	z-index: -2;
}
.recommend-card .product-info .product-introduce text {
	font-size: 14px;
}
.recommend-card .product-info .product-introduce .product-price {
	margin-top: 16rpx;
}
.recommend-card .product-info .product-introduce .product-price .discounted-price {
  color: #FFA911;
}
.recommend-card .product-info .product-introduce .product-price .price {
	background-image: linear-gradient(to right, transparent 0% 10%, black 0% 100%);
  background-size: 100% 1px; /* 横线的厚度 */
  background-position: center; /* 横线居中 */
  background-repeat: no-repeat;
}
.recommend-card .product-info .discounts {
	width: 140rpx;
	height: 32rpx;
	background-color: rgb(255, 196, 91);
	border-radius: 4px;
	text-align: center;
	line-height: 32rpx;
	font-size: 12px;
	margin-top: 14rpx;
}
.recommend-card .product-info .discounts text {
	font-size: 12px;
}
.recommend-card .product-info .product-image image {
	width: 128rpx;
	height: 128rpx;
}


.recommend-card .card-top {
	width: 100%;
	padding: 32rpx 0 0 32rpx;
	display: flex;
	justify-content: left;
	box-sizing: border-box;
}
.recommend-card .card-top .card-title {
	font-size: 16px;
	font-weight: 700;
}
.recommend-card .card-top .count-down {
	font-size: 12px;
	font-weight: 700;
	text-align: center;
	line-height: 44rpx;
	margin-left: 20rpx;
	display: flex;
}
.recommend-card .card-top .count-down .left-text {
	width: 40rpx;
	height: 44rpx;
	border-radius: 4px;
	background-color: #FEC45B;
	margin-right: 14rpx;
}
.recommend-card .card-top .count-down .middle-text {
  margin-right: 14rpx;
}
.recommend-card .card-top .count-down .right-text {
	width: 40rpx;
	height: 44rpx;
	border-radius: 4px;
	background-color: #FEC45B;
}
.recommend-card .product-list {
	margin-top: 24rpx;
}
.recommend-card .product-list .product-item image {
	width: 120rpx;
	height: 120rpx;
}