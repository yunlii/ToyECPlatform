/* pages/index/recommend/recommend.wxss */
.sub-page {
	margin: 0;
	padding: 0;
}
.banner {
	margin: 0 auto;
}
.banner swiper swiper-item .swiper-item {
	width: 710rpx;
  height: 310rpx;
}
.banner swiper swiper-item .swiper-item image {
	width: 710rpx;
  height: 310rpx;
}

.navigation-icon {
	width: 686rpx;
	height: 180rpx;
	background-color: white;
	border-radius: 4px;
	margin: 30rpx auto 0 auto;
	position: relative;
	display: flex;
	justify-content: space-around;
	align-items: center;
}
.navigation-icon > view {
	display: flex;
	flex-direction: column;
	align-items: center;
}
.navigation-icon image {
	width: 80rpx;
	height: 80rpx;
}
.navigation-icon text {
	font-size: 12px;
	color: #333333;
	margin: 16rpx 0 0 0;
}
.navigation-icon .decorative-image {
	width: 44rpx;
	height: 80rpx;
	position: absolute;
	top: -22rpx;
	right: 24rpx;
}