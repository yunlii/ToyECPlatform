/**index.wxss**/
.navigationbar-container {
  width: 100%;
  height: 102rpx;
  background-color: white;
  padding: 22rpx 20rpx 24rpx 20rpx;
  position: fixed;
  top: 0;
  box-sizing: border-box;
  z-index: 999;
}
.navigationbar{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  box-sizing: content-box;
}
.navigationbar > view {
  position: relative;
}
.navigationbar view > text {
  font-size: 16px;
  color: #999999;
}
.navigationbar view .search-image {
  width: 90rpx;
  height: 56rpx;
}
.navigationbar .selected-item > text {
  color: #333333;
  font-weight: 700;
}
.navigationbar .selected-item > image {
  width: 100%;
  height: 12rpx;
  position: absolute;
  top: 30rpx;
  left: 0;
  z-index: -999;
}


.sub-pages {
  height: 100vh;
  margin: 102rpx 20rpx 0 20rpx;
}
